            <Image src={imagen1} alt="Imagen 2" class="object-cover w-[250px] h-[400px] rounded-md" />
            <Image src={imagen1} alt="Imagen 2" class="object-cover w-[250px] h-[400px] rounded-md" />
            <Image src={imagen1} alt="Imagen 4" class="object-cover w-[250px] h-[400px] rounded-md" />
