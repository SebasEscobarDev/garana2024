---
import img1 from "@/assets/images/HOME/categorias/damas.jpg";
import img2 from "@/assets/images/HOME/categorias/ninas.jpg";
import { Image } from "astro:assets";
---

<div class="container mx-auto p-5">
    <h1
        class="mt-32 text-center text-[100px] xl:text-[115px] text-[#444444] p-20"
        style="font-family: bebas_neueregular; font-weight:200"
    >
        CATEGORIAS
    </h1>
    <div class="flex justify-between items-center">
        <div class="flex-1 flex justify-center items-center relative">
            <div
                class="w-[400px] h-[400px] bg-[rgb(204,255,210)] flex justify-center items-centertransform: translateY(10px)"
            >
                <div class="text-center">
                    <p
                        class="text-[72px] mb-5"
                        style="font-family: bebas_neueregular; font-weight:300;"
                    >
                        DAMAS
                    </p>
                    <Image src={img1} alt="Imagen 1" class="w-[300px]" />
                </div>
            </div>
        </div>
        <div class="flex-1 flex justify-center items-center relative">
            <div
                class="w-[400px] h-[400px] bg-[rgb(204,255,210)] flex justify-center items-center z-0 transform: translateY(-10px)"
            >
                <div class="text-center">
                    <Image src={img2} alt="Imagen 2" class="w-[300px]" />
                    <p
                        class="text-[30px] mt-5"
                        style="font-family: 'Bebas Neue';"
                    >
                        NIÃ‘AS
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
