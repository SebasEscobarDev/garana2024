import srcLogo from "@/assets/images/logo.png";

const english = {
    inicio : "Home",
    nosotros: "Abour us",
    productos: "Products",
    damas: "Ladies",
    ninas: "Girls",
    direccion: "Address",
    celular :"Cell phone ",
