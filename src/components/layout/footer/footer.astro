---

<footer>
    <div
        class="flex flex-col md:flex-row items-center p-5 justify-between text-white py-10 gap-5"
        style="background-color: rgb(45, 139, 55); min-height:280px; font-family: 'Open Sans', sans-serif; text-[25px]"
    >
        <div class="logo mb-4 md:mb-0 md:ml-10">
            <Image src={srcLogo} width={300} alt="Logo" />
        </div>
        <div
            class="flex-1 flex flex-col items-center justify-center text-[14px] md:text-[16px]"
        >
            <h3 class="text-center w-full font-bold mb-2">{language === "es" ? espanol.paginas : english.paginas}</h3>
            <a href="/" class="text-center w-full">{language === "es" ? espanol.inicio : english.inicio}</a>
            <a href="/nosotros" class="text-center w-full">{language === "es" ? espanol.nosotros : english.nosotros}</a>
            <a href="/catalogo" class="text-center w-full">{language === "es" ? espanol.productos : english.productos}</a>
            <a href="/catalogo/damas" class="text-center w-full">{language === "es" ? espanol.damas : english.damas}</a>
            <a href="/catalogo/ninas" class="text-center w-full">{language === "es" ? espanol.ninas : english.ninas}</a>
        </div>
        <div
            class="flex-1 flex flex-col items-center justify-center text-[14px] md:text-[16px]"
        >
            <a class="text-center w-full font-bold mb-2">{language === "es" ? espanol.direccion : english.direccion}</a>
            <a>Riosucio-Caldas</a>
            <a>Cra 13 #6-105</a>
            <a class="text-center w-full font-bold mb-2">{language === "es" ? espanol.celular : english.celular}</a>
