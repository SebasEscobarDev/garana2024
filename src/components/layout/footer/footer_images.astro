---
import { Image } from "astro:assets";
import logoI from "@/assets/images/instagram-svgrepo-com.svg";
import image1 from "@/assets/images/HOME/bk1.jpg";
import image2 from "@/assets/images/HOME/bk2.jpg";
import image3 from "@/assets/images/HOME/bk3.jpg";
import image4 from "@/assets/images/HOME/bk4.jpg";
import image5 from "@/assets/images/HOME/bk5.jpg";

---

<div class="flex flex-col md:flex-row items-center bg-black justify-between h-full w-full">

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[200px] border-4 border-white">
        <Image src={image1} class="w-full h-full bg-cover" alt="Imagen 1" />
        
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 border-4 border-white rounded-lg">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[200px]">
        <Image src={image2} class="w-full h-full bg-cover" alt="Imagen 2" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[200px]">
        <Image src={image3} class="w-full h-full bg-cover" alt="Imagen 3" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[200px]">
        <Image src={image4} class="w-full h-full bg-cover" alt="Imagen 4" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[200px]">
        <Image src={image5} class="w-full h-full bg-cover" alt="Imagen 5" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>
</div>