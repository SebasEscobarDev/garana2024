---
import { Image } from "astro:assets";
import Instagram from "@/assets/svgs/Instagram.astro";
import image1 from "@/assets/images/HOME/instagram/insta-1.jpg";
import image2 from "@/assets/images/HOME/instagram/insta-2.jpg";
import image3 from "@/assets/images/HOME/instagram/insta-3.jpg";
import image4 from "@/assets/images/HOME/instagram/insta-4.jpg";
import image5 from "@/assets/images/HOME/instagram/insta-5.jpg";

const images = [image1, image2, image3, image4, image5];
---

<div
    class="md:flex grid justify-center grid-cols-3 md:flex-row items-center h-full w-full"
>
    {
        images.map((image, index) => (
            <a
                href="https://www.instagram.com/garana_art_swimwear/"
                target="_blank"
                class="btn-insta relative inline-block md:w-full border-transparent hover:border-white"
            >
                <span class="hover-insta z-10 absolute left-0 top-0 bottom-0 right-0 justify-center flex items-center">
                    <span>
                        <Instagram width="50px" height="50px" color="#fff" />
                    </span>
                </span>
                <Image src={image} alt="Imagen 1" />

                <div class="absolute bottom-0 right-0 m-2">
                    <Instagram width="50px" height="50px" color="#fff" />
                </div>
            </a>
        ))
    }
</div>
