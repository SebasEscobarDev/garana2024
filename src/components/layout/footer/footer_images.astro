---
import { Image } from "astro:assets";
import bk from "@/assets/images/biki.jpg";
import logoI from "@/assets/images/instagram-svgrepo-com.svg";
---

<div class="flex flex-col md:flex-row items-center bg-black justify-between h-full w-full">

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[300px] border-4 border-white">
        <Image src={bk} class="w-full h-full object-cover" alt="Imagen 1" />
        
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 border-4 border-white rounded-lg">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[300px]">
        <Image src={bk} class="w-full h-full object-cover" alt="Imagen 2" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[300px]">
        <Image src={bk} class="w-full h-full object-cover" alt="Imagen 3" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[300px]">
        <Image src={bk} class="w-full h-full object-cover" alt="Imagen 4" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>

    <div class="relative w-full h-[200px] md:w-[20%] md:h-[300px]">
        <Image src={bk} class="w-full h-full object-cover" alt="Imagen 5" />
        <div class="absolute bottom-0 right-0 m-2">
            <Image src={logoI} width={50} alt="Logo" />
        </div>
    </div>
</div>